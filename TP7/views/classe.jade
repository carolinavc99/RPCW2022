extends layout

block content
    body
      table 
        tbody 
          tr.tabletitle 
            th(colspan="2") Informação da Classe #{data.codigo}
          tr 
            td Título
            td= data.titulo
          tr 
            td Nível
            td= data.nivel
          tr 
            td Descrição
            td= data.descricao
          tr 
            td Status
            td= data.status
          if data.notasAp.length > 0
            tr
              td NotasAp
              td 
                ul
                  for n in data.notasAp
                    li [#{n.idNota}] #{n.nota} 
          if data.notasEx.length > 0
            tr
              td NotasEx
              td 
                ul
                  for n in data.notasEx
                    li [#{n.idNota}] #{n.nota}
          

      if data.filhos.length > 0
        table
          tbody 
            tr.tabletitle 
              th(colspan="2") Filhos
            tr 
              th Código
              th Título
            for f in data.filhos 
              tr
                td
                  a(href="/classes/" + f.codigo) #{f.codigo}
                td
                  a(href="/classes/" + f.codigo) #{f.titulo}
              
            
    footer
      address Generated by myCLAV::RPCW2022 em #{date}