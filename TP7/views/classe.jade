extends layout

block content
    header
      h1 CLAV: Classificação e Avaliação da Informação Pública
    body
      table 
        tbody 
          tr.tabletitle 
            th(colspan="2") Informação da Classe #{data.codigo}
          tr 
            td Nível
            td= data.nivel
          tr 
            td Título
            td= data.nivel
          tr 
            td Descrição
            td= data.descricao
          tr 
            td Status
            td= data.status
          if data.notasAp != []
            tr
              td Notas
              td 
                ul
                  for n in data.notasAp
                    li [#{n.idNota}] #{n.nota} 
          tr 
            td 
            td
          

      if data.filhos != []  
        if data.filhos
          table
            tbody 
              tr.tabletitle 
                th(colspan="2") Filhos
              tr 
                th Código
                th Título
              for f in data.filhos 
                tr
                  td
                    a(href="/classes/" + f.codigo) #{f.codigo}
                  td
                    a(href="/classes/" + f.codigo) #{f.titulo}
              
            
    footer
      address Generated by myCLAV::RPCW2022 em #{date}